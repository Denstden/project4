<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>servlets.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/handler</url-pattern>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.properties</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CheckAuthFilter</filter-name>
        <filter-class>filters.CheckAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckAuthFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/dashboard.jsp</url-pattern>
        <url-pattern>/createRequest.jsp</url-pattern>
        <url-pattern>/invoices.jsp</url-pattern>
        <url-pattern>/admin.jsp</url-pattern>
        <url-pattern>/requests.jsp</url-pattern>
        <url-pattern>/addApartment.jsp</url-pattern>
        <url-pattern>/users.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>